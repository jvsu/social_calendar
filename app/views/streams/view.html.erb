<html>
<head>
	<title></title>
	<style type="text/css">
			h1{
			width:600px;
			margin-left:auto;
			margin-right:auto;
		}
		img{
			width:350px;
			height:350px;
		}
		.event{
			display:inline-block;
			margin:10px;
		}
		.user_info img{
			width:40px;
			height:40px;
			display:inline-block;
			margin:10px;
		}
		.user_info p{
			display:inline-block;
			text-transform: capitalize;
			
		}
		.description{
			text-align: center;
			vertical-align: middle;
			margin-top:10px;
		}
		#back{
			float:right;
			margin-right:100px;
		}
		h3{
			margin-left:15px;
		}
	</style>
</head>
<body>
	<a href="/streams/index" id='back'>Back</a>
	<h1>Social Calendar</h1>
	<div id='today'>
		<%if @today%>
			<a href=""><h1>Today</h1></a>
			<% @today.each do |e|%>
			<div class='event' id='t_<%=e.id%>'>
				<div class='user_info'>
					<%@avatar.each do |av| %>
						<%if av.user_id ==e.user.id %>
							<%=image_tag av.profile_pic.url %>
						<%else %>
							<img src="http://sanbernardinorising.org/wp-content/uploads/2013/07/NO-IMAGE-AVAILABLE.jpg">
						<%end %>
					<%end %>
					<p><%= e.user.first_name%> <%=e.user.last_name%></p>
				</div>
				<a href="/streams/interact/<%=e.id %>"><%= image_tag e.picture.image.url%></a>
				<div class='all_event_info' id="t_<%=e.id%>_all_events">
					
					<p class='description'><%=e.description %></p>
				</div>
			</div>
			<%end %>
		<%end %>
	</div>
	<div id='day1' class='day_stream'>
		<% if @day_events%>
		<a href=""><h3><%=@date_name%>:<%=@day_date_title %></h3></a>
			<%@day_events.each do |e|%>
				<div class='event' id='1_<%=e.id%>'>
					<div class='user_info'>
					<%@avatar.each do |av| %>
						<%if av.user_id ==e.user.id %>
							<%=image_tag av.profile_pic.url %>
							<% @pic=true%>
						<%end %>
					<%end %>
					<%if @pic ==false %> 
								<img src="http://sanbernardinorising.org/wp-content/uploads/2013/07/NO-IMAGE-AVAILABLE.jpg">
							<%end %>
					<p><%= e.user.first_name%> <%=e.user.last_name%></p>
				</div>
					<a href="/streams/interact/<%=e.id %>"><%= image_tag e.picture.image.url%></a>
					<div class='all_event_info' id="1_<%=e.id%>_all_events">
					<p class='description'><%=e.description %></p>
				</div>
				</div>
			<%end %>
		<%end %>		
	</div>

</body>
</html>